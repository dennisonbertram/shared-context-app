{
  "name": "shared-context-app",
  "version": "0.1.0",
  "description": "Global Context Network MVP - Privacy-first learning capture and sharing system",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:once": "vitest run",
    "coverage": "vitest run --coverage",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:reset": "rm -f data/context.db && npm run db:migrate",
    "worker:sanitize": "ts-node src/workers/runSanitizationWorker.ts",
    "worker:learning": "ts-node src/workers/runLearningWorker.ts",
    "mcp:server": "ts-node src/mcp/runServer.ts"
  },
  "keywords": [
    "context",
    "learning",
    "privacy",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.5",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "better-sqlite3": "^12.4.6",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "dotenv": "^16.3.1",
    "eslint": "^9.0.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.1.0"
  }
}
